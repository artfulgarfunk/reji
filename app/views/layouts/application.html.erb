<!DOCTYPE html>
<html>
  <head>
    <title>Reji</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag("poison.jpg", size: "74x40", alt: "Reji", id: "logo") %>
        <!-- <img id="logo" src="/images/poison.jpg" width="74" height="40" /> -->
      </div>
      <div class="col-md-7">
        <h1><a href="/">Reji Restaurants</a></h1>
      </div>
      <div class="col-md-4">
        <% if user_signed_in? %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete,
          class: 'btn btn-default' %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path,
          class: 'btn btn-default'  %>
          <%= link_to "Sign up", new_user_registration_path,
          class: 'btn btn-default'  %>
        <% end %>
      </div>
    </div>
    <%if notice %>
      <div class="row">
        <p class="notice alert-info"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="row">
        <p class="alert alert-warning"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </div> <!-- end container -->
  </body>
</html>
